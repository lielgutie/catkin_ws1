<?xml version="1.0"?>
<robot name="rur">
  <!-- Base Link -->
  <link name="base_link"/>

  <!-- Laser -->
  <link name="laser"/>

  <!-- Joint: Base Link to Laser -->
  <joint name="base_link_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="0.163 0 0.3" rpy="0.0 0.0 3.141592"/>
    <axis xyz="0 0 0"/>
  </joint>

  <!-- Left Wheel -->
  <link name="left_wheel"/>

  <!-- Right Wheel -->
  <link name="right_wheel"/>

  <!-- Joint: Base Link to Left Wheel -->
  <joint name="base_link_to_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.0 0.15 0.0" rpy="0.0 0.0 0.0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Joint: Base Link to Right Wheel -->
  <joint name="base_link_to_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.0 -0.15 0.0" rpy="0.0 0.0 0.0"/>
    <axis xyz="0 1 0"/>
  </joint>
</robot>